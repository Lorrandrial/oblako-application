<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Iscompleted</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.body %></td>
        #<#td>#<#%= todo.task.name %><#/td>
        <td><%= todo.isCompleted %></td>
        <td><%= todo.task_id %></td>
        <td><%= link_to 'Show Task', [@task] %></td>
        <td><%= link_to 'Edit Todo', edit_task_todo_path(@task, todo) %></td>
        <td><%= link_to 'Destroy Todo', [@task, todo] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_task_todo_path(@task) %>
